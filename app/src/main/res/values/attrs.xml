<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="acrprogress_circle">
        <attr name="outside_circle_radius" format="dimension"/>
        <attr name="outside_circle_markline_radius" format="dimension"/>
        <attr name="progress_circle_radius" format="dimension"/>
        <attr name="progress_circle_width" format="dimension"/>
        <attr name="inside_circle_radius" format="dimension"/>
        <attr name="inside_circle_markline" format="dimension"/>
        <attr name="center_content_progress" format="integer"/>
        <attr name="progress_circle_distance_angle" format="integer"/>
        <attr name="center_unit" format="string"/>
        <attr name="center_desc" format="string"/>
        <attr name="center_content_size" format="dimension"/>
        <attr name="center_unit_size" format="dimension"/>
        <attr name="center_desc_size" format="dimension"/>
        <attr name="outside_mark_size" format="dimension"/>
        <attr name="center_content_color" format="color"/>
        <attr name="center_unit_color" format="color"/>
        <attr name="center_desc_color" format="color"/>
        <attr name="outside_mark_color" format="color"/>
        <attr name="progress_circle_color" format="color"/>
        <attr name="progress_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"/>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    <!--选图控件-->
    <declare-styleable name="ZzImageBox">
        <attr name="zib_max_line" format="integer" />
        <attr name="zib_img_size_one_line" format="integer" />
        <attr name="zib_img_padding" format="dimension|reference" />
        <attr name="zib_img_default" format="color|reference" />
        <attr name="zib_img_delete" format="color|reference" />
        <attr name="zib_img_add" format="color|reference" />
        <attr name="zib_img_deletable" format="boolean" />
        <attr name="zib_left_margin" format="dimension|reference" />
        <attr name="zib_right_margin" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension" />
        <attr name="type" format="integer" />
        <attr name="src" format="integer" />
    </declare-styleable>

    <!--下划线-->
    <declare-styleable name="UnderlineTextView">
        <attr name="underline_color" format="color"/>
        <attr name="underline_height" format="dimension"/>
        <attr name="underline_width" format="dimension"/>
    </declare-styleable>

    <!--拼接的TextView-->
    <declare-styleable name="MiddlePointTextView">
        <attr name="text_start" format="string"/>
        <attr name="text_middle" format="string"/>
        <attr name="text_end" format="string"/>
        <attr name="text_start_size" format="dimension"/>
        <attr name="text_middle_size" format="dimension"/>
        <attr name="text_end_size" format="dimension"/>
        <attr name="text_start_color" format="color"/>
        <attr name="text_middle_color" format="color"/>
        <attr name="text_end_color" format="color"/>
    </declare-styleable>

    <!--点赞动画-->
    <declare-styleable name="PorterImageView">
        <attr name="siShape" format="integer|reference" />
    </declare-styleable>
    <declare-styleable name="ShineButton">
        <attr name="btn_color" format="color" />
        <attr name="btn_fill_color" format="color" />
        <attr name="shine_count" format="integer" />
        <attr name="shine_turn_angle" format="float" />
        <attr name="small_shine_offset_angle" format="float" />
        <attr name="enable_flashing" format="boolean" />
        <attr name="allow_random_color" format="boolean" />
        <attr name="small_shine_color" format="color" />
        <attr name="big_shine_color" format="color" />
        <attr name="shine_animation_duration" format="integer" />
        <attr name="click_animation_duration" format="integer" />
        <attr name="shine_distance_multiple" format="float" />
        <attr name="shine_size" format="dimension" />
    </declare-styleable>

    <!--星球view-->
    <declare-styleable name="TagCloudView">
        <attr name="autoScrollMode">
            <enum name="disable" value="0" />
            <enum name="decelerate" value="1" />
            <enum name="uniform" value="2" />
        </attr>
        <attr name="radiusPercent" format="float" />
        <attr name="scrollSpeed" format="float" />
        <attr name="lightColor" format="color" />
        <attr name="darkColor" format="color" />
    </declare-styleable>
</resources>