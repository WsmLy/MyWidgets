<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_home_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#ff00ff00"
    android:gravity="center"
    android:orientation="vertical">
    <!--android:background="@color/main_blue_new1"-->

    <LinearLayout
        android:id="@+id/ll_head_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_memory_size_desc"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="asdfa"
            android:textColor="#fff"
            android:textSize="15dp"/>
        <!--android:text="@string/tv_junk_desc"-->
        <Button
            android:id="@+id/pb_ram_prompt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="23dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:paddingLeft="61dp"
            android:paddingRight="61dp"
            android:text="adfqwergqe"
            android:textColor="@color/white"
            android:textSize="17dp"
            />
    </LinearLayout>

</LinearLayout>
