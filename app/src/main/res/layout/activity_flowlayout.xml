<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <teotw.com.mywidgets.widgets.flowlayout.FlowLayout
        android:id="@+id/flowLayout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:tag_gravity="left">
    </teotw.com.mywidgets.widgets.flowlayout.FlowLayout>

    <teotw.com.mywidgets.widgets.flowlayout.FlowLayout
        android:id="@+id/flowLayout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:tag_gravity="center">
    </teotw.com.mywidgets.widgets.flowlayout.FlowLayout>

    <teotw.com.mywidgets.widgets.flowlayout.FlowLayout
        android:id="@+id/flowLayout_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tag_gravity="right">
    </teotw.com.mywidgets.widgets.flowlayout.FlowLayout>

</LinearLayout>